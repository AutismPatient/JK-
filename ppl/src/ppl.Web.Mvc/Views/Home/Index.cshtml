@using ppl.Web.Startup
@using ppl.Web.Models.Home
@inject ppl.Timing.AppTimes AppTimes
@model HomeViewModel
@{
    ViewBag.CurrentPageName = PageNames.Home; // The menu item will be active for this page.
}
@section styles {
    <link href="~/lib/morris.js/morris.css" rel="stylesheet" asp-append-version="true" />
}
@section scripts
    {
    <environment names="Development">
        <script src="~/lib/jquery-countTo/jquery.countTo.js" asp-append-version="true"></script>
        <script src="~/lib/raphael/raphael.js" asp-append-version="true"></script>
        <script src="~/lib/morris.js/morris.js" asp-append-version="true"></script>
        <script src="~/lib/chart.js/dist/Chart.bundle.js" asp-append-version="true"></script>
        <script src="~/lib/Flot/jquery.flot.js" asp-append-version="true"></script>
        <script src="~/lib/Flot/jquery.flot.resize.js" asp-append-version="true"></script>
        <script src="~/lib/Flot/jquery.flot.pie.js" asp-append-version="true"></script>
        <script src="~/lib/Flot/jquery.flot.categories.js" asp-append-version="true"></script>
        <script src="~/lib/Flot/jquery.flot.time.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-sparkline/dist/jquery.sparkline.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Home/Index.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/_Bundles/home-index.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="block-header">
    <h1>
        工作台   <small>统计数据与报告 </small> <small class="right">
            <button class="btn btn-link waves-effect">
                刷新
            </button>
            <button type="button" class="btn btn-link waves-effect">
                参数设置
            </button>
        </small>
    </h1>
</div>
<hr />
@*工作台内容：*@
<div class="row clearfix">
    <div class="info-fox col-md-3 p-t-10 p-b-10">
        <div class="number-info">
            <div class="number-title">
                <h3 class="text-1">45</h3>
                <p>新的资料数据</p>
            </div>
            <div class="icon-info">
                <i class="material-icons text-1">add_alert</i>
            </div>
        </div>
        <div class="progress-info">
            <div class="progress-box">
                <span style="width: 79%;" class="back-1">
                </span>
            </div>
            <div class="progress-status">
                <p>
                    @DateTime.Now.ToString("D") - @DateTime.Now.ToString("D") <font class="right">79%</font>
                </p>
            </div>
        </div>
    </div>
    <div class="info-fox col-md-3 p-t-10 p-b-10">
        <div class="number-info">
            <div class="number-title">
                <h3 class="text-2">146</h3>
                <p>最近增长</p>
            </div>
            <div class="icon-info">
                <i class="material-icons text-2">whatshot</i>
            </div>
        </div>
        <div class="progress-info">
            <div class="progress-box">
                <span style="width: 67%;" class="back-2">
                </span>
            </div>
            <div class="progress-status">
                <p>
                    @DateTime.Now.ToString("D") - @DateTime.Now.ToString("D") <font class="right">67%</font>
                </p>
            </div>
        </div>
    </div>
    <div class="info-fox col-md-3 p-t-10 p-b-10">
        <div class="number-info">
            <div class="number-title">
                <h3 class="text-3">671</h3>
                <p>用户意见</p>
            </div>
            <div class="icon-info">
                <i class="material-icons text-3">tag_faces</i>
            </div>
        </div>
        <div class="progress-info">
            <div class="progress-box">
                <span style="width: 60%;" class="back-3">
                </span>
            </div>
            <div class="progress-status">
                <p>
                    @DateTime.Now.ToString("D") - @DateTime.Now.ToString("D") <font class="right">60%</font>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-2 m-t-20">
        <div class="info-box-4 hover-zoom-effect" style="height:114px">
            <div class="icon">
                <i class="material-icons col-pink">email</i>
            </div>
            <div class="content">
                <div class="text">持续性增长百分比</div>
                <div class="number">45%</div>
            </div>
        </div>
    </div>
</div>
