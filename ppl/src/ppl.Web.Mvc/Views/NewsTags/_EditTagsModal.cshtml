@using ppl.Web.Models.Common.Modals
@model ppl.Web.Models.NewsManger.Tag.EditTagsViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("编辑新闻标签"))
<div class="modal-body">
    <form name="EditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line focused">
                        <input id="tagName" type="text" name="TagName" value="@Model.TagName" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="tagName" class="form-label">标签名称</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</div>
<script src="~/view-resources/Views/Tag/EditModal.js" asp-append-version="true"></script>
